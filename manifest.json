{
    "manifest_version": 3,
    "name": "XHR Interceptor",
    "version": "1.0",
    "description": "Intercept XHR requests and log responses for specific URLs",
    "permissions": [
        "storage",
        "downloads",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start",
            "all_frames": true,
            "world": "MAIN"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "XHR Interceptor"
    }
}